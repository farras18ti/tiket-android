<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg"
    tools:context=".DaftarBioskop">

    <RelativeLayout
        android:id="@+id/image"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:background="@drawable/logo"
            android:layout_width="200dp"
            android:layout_height="250dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/textview"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:text="List Bioskop :"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_marginTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:gravity="center"
        android:layout_below="@id/image"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/cinemaXXI"
            android:text="Cinema XXI"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>

        <Button
            android:id="@+id/Cgv"
            android:text="CGV Pekanbaru"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn"
            android:textSize="20dp"
            android:layout_below="@+id/cinemaXXI"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>

        <Button
            android:id="@+id/Cinepolis"
            android:text="Cinepolis"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn"
            android:textSize="20dp"
            android:layout_below="@+id/Cgv"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>

        <Button
            android:id="@+id/Box"
            android:text="D'Box Movie"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn"
            android:textSize="20dp"
            android:layout_below="@+id/Cinepolis"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/textview2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:text="_Cinema XU_"
            android:textStyle="italic"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>